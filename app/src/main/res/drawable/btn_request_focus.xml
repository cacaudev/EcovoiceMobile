<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" xmlns:xmls="http://schemas.android.com/apk/res-auto">
 <item android:state_pressed="false">
     <layer-list xmlns:android="http://schemas.android.com/apk/res/android">
         <item>
             <shape android:shape="oval">
                 <solid android:color="@color/color_not_pressed"/>
             </shape>
         </item>
         <item android:drawable="@drawable/icon_request_focus"/>

     </layer-list>
 </item>
    <item android:state_pressed="true">
        <layer-list xmlns:android="http://schemas.android.com/apk/res/android">
            <item>
                <shape android:shape="oval">
                    <solid android:color="@color/color_pressed"/>
                </shape>
            </item>
            <item android:drawable="@drawable/icon_request_focus"  />
        </layer-list>
    </item>
</selector>